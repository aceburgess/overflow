<h1>Ask a Question</h1>

<%= form_for @question do |f| %>

<h4><%= f.label :title, "Question" %>
<%= f.text_field :title %></h4>

<h4><%= f.label :content, "Details" %>
<%= f.text_area :content %></h4>

<p><%= label_tag :tags %>
<%= text_field_tag :tags, nil, :placeholder => "ex: ''tag1, tag2, tag3''"%><p>

<%= f.submit "Submit" %>

<% end %>

<%= link_to "Back", questions_path %>
