<%= form_for @user do |f| %>
<div class="form-container-big">
<div class="form-container-left">
  <div class="field">
    <%= f.label :username %>
  </div>
  <div class="field">
    <%= f.label :email %>
  </div>
  <div class="field">
    <%= f.label :password %>
  </div>
  <div id="sign_button" class="user_button">
    <%= f.submit %>
  </div>
  </div>
<div class="form-container-right">
  <div>
    <%= f.text_field :username %>
  </div>
  <div>
    <%= f.text_field :email %>
  </div>
  <div>
    <%= f.password_field :password %>
  </div>
  </div>

</div>

<% end %>