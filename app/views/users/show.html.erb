
<div class="user_div">
<h2 style="text-align:center"><%= @user.username %></h3>
<h4><%= @user.email %></h4>
<%= link_to "Edit!", edit_user_path %>
<%= link_to "Delete!", user_path, method: "delete" %>
</div>


<div class="user_questions_div">
<h3>Questions asked</h3>
<% @user.questions.each do |question| %>
<h3><%= link_to question.title, question_path %></h3>
<% end %>

</div>

<div class="user_answer_div">
<h3>Answers Contributed</h3>
<% @user.answers.each do |answer| %>


<% end %>
</div>

<%= javascript_tag do %>
  var graph_data = <%= @graph_data %>;
<% end %>

<a href="javascript:$('#chart_div').toggle('slow')" id="data-button">View User Stats</a>

<div id="chart_nav" style="width: 900px; height: 50px;"></div>
<div id="chart_div" style="width: 900px; height: 500px;"></div>
